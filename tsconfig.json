{
  "compilerOptions": {
    "incremental": true,
    "outDir": "lib",
    "rootDirs": ["src"],
    "target": "ES2021",
    "sourceMap": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@adapters/*": ["./adapters/*"],
      "@main/*": ["./main/*"],
      "@drivers/*": ["./drivers/*"],
      "@entities/*": ["./entities/*"],
      "@usecases/*": ["./usecases/*"]
    },
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src"]
}
