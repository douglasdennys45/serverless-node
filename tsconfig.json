{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "noEmit": false,
    "target": "ES2020",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@interfaces/*": ["./interfaces/*"],
      "@domain/*": ["./domain/contracts/*"],
      "@core/*": ["./core/*"],
      "@frameworks/*": ["./frameworks/*"],
      "@entities/*": ["./domain/entities/*"],
      "@services/*": ["./domain/services/*"]
    },
  },
  "include": ["src"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}

